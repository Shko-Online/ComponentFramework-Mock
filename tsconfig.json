{
    "compilerOptions": {
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "ES6",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "sourceRoot": "../src",
        "baseUrl": ".",
        "paths": {
            "@shko.online/componentframework-mock*": [
                "./src*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "wwwroot",
        "dist"
    ],
    "include": [
        "src",
        "__tests__",
        "__test-components__"
    ]
}